{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "command": "meson compile -C build",
            "type": "shell",
            "args": [],
        },
        {
            "label": "debug_config",
            "command": "meson configure build --buildtype=debug",
            "type": "shell",
            "args": [],
        },
        {
            "label": "debug_setup",
            "dependsOn":["setup", "debug_config"],
            "dependsOrder": "sequence",
            "command": "echo Debug setup complete",
            "type": "shell",
            "group": "build"
        },
        {
            "label": "release_config",
            "command": "meson configure build --buildtype=release",
            "type": "shell",
            "args": [],
        },
        {
            "label": "release_build",
            "dependsOn":["setup", "release_config", "compile"],
            "dependsOrder": "sequence",
            "command": "echo Release complete",
            "type": "shell",
            "group": "build"
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "rm -rf build",
        },
        {
            "label": "setup",
            "type": "shell",
            "dependsOn":["clean"],
            "command": "meson setup build -Denable_libav=enabled -Denable_drm=enabled -Denable_egl=enabled -Denable_qt=enabled -Denable_opencv=disabled -Denable_tflite=disabled -Denable_hailo=disabled",
        }
    ]
}